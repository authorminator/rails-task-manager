<div class="row justify-content-center">
  <div class="col-6 mt-5">
    <h2><%= @task.name %></h2>
    <p>- <%= @task.details %></p>
    <p><%= @task.completed %></p>
    <%= link_to "Back to Tasks", tasks_path %>
    <%= link_to "Edit the Task", edit_task_path(@task) %>
    <%= link_to "Delete the Task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
</div>
