<div class="row justify-content-center">
  <div class="col-6 mt-5">
    <h1>My Tasks</h1>
    <ul class="p-0 list-unstyled">
      <% @tasks.each do |task| %>
        <li class="list-group-item my-2">
          <div>
            <p><%= task.name %></p>
            <%= link_to "More...", task_path(task) %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
